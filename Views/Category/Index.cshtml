@model IEnumerable<MachineTest.Models.Category>



<h2>Categories</h2>
@using (Html.BeginForm("Index", "Product", FormMethod.Post))
{
    <button type="submit">Product</button>
}
<a href="@Url.Action("Create", "Category")">Create New Category</a>
<table>
    <thead>
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })">Edit</a> |
                    <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
